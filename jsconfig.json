{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@api/*": [
                "src/api/*"
            ],
            "@components/*": [
                "src/components/*"
            ],
            "@helpers/*": [
                "src/helpers/*"
            ],
            "@redux/*": [
                "src/redux/*"
            ],
            "@styles/*": [
                "src/styles/*"
            ],
            "@theme/*": [
                "src/theme/*"
            ],
            "@views/*": [
                "src/views/*"
            ],
            "@/*": [
                "src/*"
            ],
            "@PizzaItem/*": [
                "src/components/PizzaItem/*"
            ]
        }
    }
}